<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarMedicamento">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="-45dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/textViewPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-140dp"
            android:layout_marginTop="70dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/textPaciente" />

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="50dp"
            android:text="Nombre del Paciente: " />
        <TextView
            android:id="@+id/textViewRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-112dp"
            android:layout_marginTop="10dp"
            android:text="Run del Paciente: " />
        <!-- Texto explicativo -->
        <TextView
            android:id="@+id/textViewExplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el texto:"
            android:layout_marginTop="50dp"
            android:layout_marginStart="-130dp"/>

        <!-- Cuadro de texto -->
        <EditText
            android:id="@+id/editTextTexto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewExplicacion"
            android:layout_marginTop="8dp"
            android:layout_marginStart="-80dp"
            android:hint="Escribe aquí"/>

        <TextView
            android:id="@+id/textViewExplicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese el texto:"
            android:layout_marginTop="10dp"
            android:layout_marginStart="-130dp"/>
        <!-- Cuadro de texto -->
        <EditText
            android:id="@+id/editTextTexto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewExplicacion"
            android:layout_marginTop="8dp"
            android:layout_marginStart="-80dp"
            android:hint="Escribe aquí"/>

        <TextView
            android:id="@+id/textViewPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-70dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/textFormat" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="6"
            android:rowCount="6"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <!--Boton1-->
            <ImageButton
                android:id="@+id/btnAddMed"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:layout_row="0"
                android:layout_column="0"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/add" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/textPast" />

            <!--Boton2-->
            <ImageButton
                android:id="@+id/btnAddMed"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:layout_row="1"
                android:layout_column="0"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/add" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="@string/textCap" />

            <!--Boton3-->
            <ImageButton
                android:id="@+id/btnAddMed"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:layout_row="2"
                android:layout_column="0"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/add" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="@string/textJara" />

            <!--Boton4-->
            <ImageButton
                android:id="@+id/btnAddMed"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:layout_row="1"
                android:layout_column="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/add" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="4"
                android:text="@string/textGota" />

            <!--Boton5-->
            <ImageButton
                android:id="@+id/btnAddMed"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:layout_row="0"
                android:layout_column="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/add" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="4"
                android:text="@string/textCre" />

            <!--Boton6-->
            <ImageButton
                android:id="@+id/btnAddMed"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:layout_row="2"
                android:layout_column="3"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/add" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="4"
                android:text="@string/textInha" />
        </GridLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>